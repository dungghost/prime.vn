<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Prime\Component\Prime\Administrator\Field">
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" hidden="true" hint="COM_PRIME_FORM_LBL_AREA_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" description="JGLOBAL_FIELD_MODIFIED_BY_DESC" hidden="true" hint="COM_PRIME_FORM_LBL_AREA_MODIFIED_BY"/>
    <field name="area" filter="safehtml" type="text" required="true" label="COM_PRIME_FORM_LBL_AREA_AREA" description="COM_PRIME_FORM_DESC_AREA_AREA" hint="COM_PRIME_FORM_LBL_AREA_AREA"/>
    <field name="language" client="administrator" type="language" label="COM_PRIME_FORM_LBL_AREA_LANGUAGE" description="COM_PRIME_FORM_DESC_AREA_LANGUAGE" hint="COM_PRIME_FORM_LBL_AREA_LANGUAGE"/>
    <field name="alias" type="text" class="inputbox" generator="area" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC" hint="COM_PRIME_FORM_LBL_AREA_ALIAS"/>
    <field name="description" filter="safehtml" type="textarea" label="COM_PRIME_FORM_LBL_AREA_DESCRIPTION" description="COM_PRIME_FORM_DESC_AREA_DESCRIPTION" hint="COM_PRIME_FORM_LBL_AREA_DESCRIPTION"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>

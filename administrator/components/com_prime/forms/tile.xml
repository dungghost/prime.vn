<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Prime\Component\Prime\Administrator\Field">
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" hidden="true" hint="COM_PRIME_FORM_LBL_TILE_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" description="JGLOBAL_FIELD_MODIFIED_BY_DESC" hidden="true" hint="COM_PRIME_FORM_LBL_TILE_MODIFIED_BY"/>
    <field name="tile" maxlength="255" filter="string" type="text" class="tile" required="true" label="COM_PRIME_FORM_LBL_TILE_TILE" description="COM_PRIME_FORM_DESC_TILE_TILE" hint="COM_PRIME_FORM_LBL_TILE_TILE"/>
    <field name="sku" maxlength="255" filter="safehtml" type="text" required="true" label="COM_PRIME_FORM_LBL_TILE_SKU" description="COM_PRIME_FORM_DESC_TILE_SKU" hint="COM_PRIME_FORM_LBL_TILE_SKU"/>
    <field name="description" rows="5" filter="safehtml" type="textarea" label="COM_PRIME_FORM_LBL_TILE_DESCRIPTION" description="COM_PRIME_FORM_DESC_TILE_DESCRIPTION" hint="COM_PRIME_FORM_LBL_TILE_DESCRIPTION"/>
    <field name="brand" type="foreignkey" label="COM_PRIME_FORM_LBL_TILE_BRAND" description="COM_PRIME_FORM_DESC_TILE_BRAND" default="0" input_type="list" table="#__prime_brands" key_field="id" translate="true" value_field="brand"/>
    <field name="language" type="contentlanguage" label="COM_PRIME_FORM_LBL_TILE_LANGUAGE" description="COM_PRIME_FORM_DESC_TILE_LANGUAGE" hint="COM_PRIME_FORM_LBL_TILE_LANGUAGE">
      <option value="*">JALL</option>
    </field>
    <field name="gallery" directory="" type="media" label="COM_PRIME_FORM_LBL_TILE_GALLERY" description="COM_PRIME_FORM_DESC_TILE_GALLERY" hint="COM_PRIME_FORM_LBL_TILE_GALLERY"/>
    <field name="design" type="foreignkey" label="COM_PRIME_FORM_LBL_TILE_DESIGN" description="COM_PRIME_FORM_DESC_TILE_DESIGN" default="0" input_type="list" table="#__prime_designs" key_field="id" translate="true" value_field="title"/>
    <field name="thickness" type="foreignkey" label="COM_PRIME_FORM_LBL_TILE_THICKNESS" description="COM_PRIME_FORM_DESC_TILE_THICKNESS" default="0" input_type="list" table="#__prime_thickness" key_field="id" translate="true" value_field="thickness"/>
    <field name="image" directory="" type="media" label="COM_PRIME_FORM_LBL_TILE_IMAGE" description="COM_PRIME_FORM_DESC_TILE_IMAGE" hint="COM_PRIME_FORM_LBL_TILE_IMAGE"/>
    <field name="area" type="tilearea" multiple="true" label="COM_PRIME_FORM_LBL_TILE_AREA" description="COM_PRIME_FORM_DESC_TILE_AREA" hint="COM_PRIME_FORM_LBL_TILE_AREA"/>
    <field name="effects" type="tileeffects" multiple="true" label="COM_PRIME_FORM_LBL_TILE_EFFECTS" description="COM_PRIME_FORM_DESC_TILE_EFFECTS" hint="COM_PRIME_FORM_LBL_TILE_EFFECTS"/>
    <field name="color" type="foreignkey" label="COM_PRIME_FORM_LBL_TILE_COLOR" description="COM_PRIME_FORM_DESC_TILE_COLOR" default="0" input_type="list" table="#__prime_colors" key_field="id" translate="true" value_field="color"/>
    <field name="type" type="tiletype" multiple="true" label="COM_PRIME_FORM_LBL_TILE_TYPE" description="COM_PRIME_FORM_DESC_TILE_TYPE" default="0" input_type="list" table="#__prime_types" key_field="id" translate="true" value_field="type"/>
    <field name="groutcolor" type="tilegroutcolor" multiple="true" label="COM_PRIME_FORM_LBL_TILE_GROUTCOLOR" description="COM_PRIME_FORM_DESC_TILE_GROUTCOLOR" default="0" input_type="list" table="#__prime_groutcolors" key_field="id" translate="true" value_field="groutcolor"/>
    <field name="variation" type="foreignkey" label="COM_PRIME_FORM_LBL_TILE_VARIATION" description="COM_PRIME_FORM_DESC_TILE_VARIATION" default="0" input_type="list" table="#__prime_variation_colors" key_field="id" translate="true" value_field="variation"/>
    <field name="surface" type="foreignkey" label="COM_PRIME_FORM_LBL_TILE_SURFACE" description="COM_PRIME_FORM_DESC_TILE_SURFACE" default="0" input_type="list" table="#__prime_surfaces" key_field="id" translate="true" value_field="surface"/>
    <field name="facetile" type="tilefacetile" multiple="true" label="COM_PRIME_FORM_LBL_TILE_FACETILE" description="COM_PRIME_FORM_DESC_TILE_FACETILE" default="0" input_type="list" table="#__prime_faces" key_field="id" translate="true" value_field="face"/>
    <field name="size" type="foreignkey" label="COM_PRIME_FORM_LBL_TILE_SIZE" description="COM_PRIME_FORM_DESC_TILE_SIZE" default="0" input_type="list" table="#__prime_sizes" key_field="id" translate="true" value_field="size"/>
    <field name="alias" type="text" class="inputbox" generator="tile" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC" hint="COM_PRIME_FORM_LBL_TILE_ALIAS"/>
    <field name="video" validate="url" type="url" label="COM_PRIME_FORM_LBL_TILE_VIDEO" description="COM_PRIME_FORM_DESC_TILE_VIDEO" hint="COM_PRIME_FORM_LBL_TILE_VIDEO"/>
    <field name="live" validate="url" type="url" label="COM_PRIME_FORM_LBL_TILE_LIVE" description="COM_PRIME_FORM_DESC_TILE_LIVE" hint="COM_PRIME_FORM_LBL_TILE_LIVE"/>
    <field name="collection" filter="safehtml" type="text" label="COM_PRIME_FORM_LBL_TILE_COLLECTION" description="COM_PRIME_FORM_DESC_TILE_COLLECTION" hint="COM_PRIME_FORM_LBL_TILE_COLLECTION"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
